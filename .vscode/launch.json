    "version": "0.2.0",
    "configurations": [
        {
            "name": "Wasabee Server",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "/workspace/cmd/wasabee/main.go",
            "serverReadyAction":{
              "action": "openExternally",
              "pattern": "HTTPS server starting on :\\d+, you should be able to reach it at (\\S+)",
            }
        },
        {
          "name": "Mock APIs Server",
          "type": "go",
          "request": "launch",
          "mode": "debug",
          "program": "/workspace/cmd/response-provider/main.go"
      },
      {
        "name": "Reaper Process",
        "type": "go",
        "request": "launch",
        "mode": "debug",
        "program": "/workspace/cmd/wasabee-reaper/main.go"
    },
    {
        "name": "Test",
        "type": "go",
        "request": "launch",
        "mode": "test",
        "program": "${workspaceFolder}"
    }
    ],
    "compounds": [
      {
        "name": "Debug All Services",
        "configurations": [
          "Mock APIs Server",
          "Reaper Process",
          "Wasabee Server"
        ]
      }
    ]
}